# TPI Suitcase Credentials
USERNAME=your_username_here
PASSWORD=your_password_here
TPI_BASE_URL=https://my.tpisuitcase.com/

# Server Configuration
PORT=3001
NODE_ENV=production
LOG_LEVEL=info

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=180000
BROWSER_LAUNCH_TIMEOUT=240000
PAGE_TIMEOUT=60000
NAVIGATION_TIMEOUT=60000
BROWSER_MAX_RETRIES=5
BROWSER_RETRY_DELAY=5000
BROWSER_MAX_RETRY_DELAY=60000
BROWSER_RESOURCE_TIMEOUT_MS=600000

# Custom browser arguments (comma-separated)
# BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# Job Management Configuration
MAX_CONCURRENT_JOBS=1
BATCH_SIZE=50
MAX_JOB_RETRIES=3
JOB_TIMEOUT_MS=1800000
BATCH_TIMEOUT_MS=300000
JOB_RETRY_DELAY_MS=10000
JOB_CLEANUP_INTERVAL_MS=86400000

# Memory Monitoring Configuration
MEMORY_THRESHOLD_MB=512
MAX_MEMORY_USAGE_MB=1024
MEMORY_CHECK_INTERVAL_MS=30000
GC_THRESHOLD_MB=256
ENABLE_MANUAL_GC=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=300000
CIRCUIT_BREAKER_MONITORING_PERIOD_MS=60000

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_BOT_NAME=TPI Submit Bot (Coolify)
DISCORD_NOTIFICATIONS_ENABLED=true
DISCORD_TIMEOUT_MS=10000
DISCORD_RATE_LIMIT_DELAY_MS=1000
DISCORD_MAX_RETRIES=3

# Error types to notify about (comma-separated)
DISCORD_NOTIFY_ERRORS=browser_launch,browser_crash,resource_exhaustion,circuit_breaker,job_failure

# Webhook Configuration (for data submission)
WEBHOOK_URL=https://your-webhook-url.com/endpoint
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_MS=5000

# Status Updates Configuration
STATUS_WEBHOOK_URL=https://n8n.collectgreatstories.com/webhook/tpi-status
STATUS_WEBHOOK_TIMEOUT_MS=10000
STATUS_UPDATES_ENABLED=true

# Automatic Restart Configuration
AUTO_RESTART_ENABLED=true
MAX_AUTO_RESTARTS=3
AUTO_RESTART_DELAY_MS=30000
RESTART_COOLDOWN_MS=300000

# Development/Debug Configuration
DEBUG_MODE=false
LOG_BROWSER_CONSOLE=false
SAVE_BROWSER_LOGS=false
SCREENSHOT_ON_ERROR=false
VERBOSE_LOGGING=false

# Legacy Configuration (deprecated but still supported)
MAX_RETRIES=3
TIMEOUT_MS=60000